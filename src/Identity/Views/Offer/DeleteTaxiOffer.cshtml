@using Identity.Models
@model Identity.Models.TaxiOffer
@{
    ViewBag.Title = "Удаление предложения";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="dl-horizontal">
        <dt>Имя водителя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Машина</dt>
        <dd>
            @Html.DisplayFor(model => model.Auto)
        </dd>
        <dt>Местоположение</dt>
        <dd>
            @Html.DisplayFor(model => model.Latitude)
            @Html.DisplayFor(model => model.Longitude)
        </dd>

        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <div>
        <form asp-controller="Offer" asp-action="DeleteTaxiOffer" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>