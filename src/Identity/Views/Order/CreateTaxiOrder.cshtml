@model Identity.Models.Order
@{
    ViewBag.Title = "Добавление нового предложения такси";
}
<h2>@ViewData["Title"]</h2>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


<h1></h1>




<form asp-action="CreateTaxiOrder" asp-controller="Order">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>Enter text:</p>
                    <input type="time" name="txtInput" id="txtInput">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" id="btnSave" class="btn btn-primary">Save changes</input>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    <div class="form-group" style="display : none">
        <label asp-for="ExpectedTime" class="control-label">Начальный пункт</label>
        <input type="text" asp-for="ExpectedTime" id="expectedTime" class="form-control" />
        <span asp-validation-for="ExpectedTime"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartPoint" class="control-label">Начальный пункт</label>
        <input type="text" asp-for="StartPoint" id ="startPoint" class="form-control" />
        <span asp-validation-for="StartPoint"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="EndPoint" class="control-label">Конечный пункт</label>
        <input type="text" asp-for="EndPoint" class="form-control"/>
        <span asp-validation-for="EndPoint"></span>
    </div>
    
    
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label>
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date"></span>
    </div>

    <div class="form-group">
        <label asp-for="Time" class="control-label">Время</label>
        <input type="time" asp-for="Time" class="form-control"/>
        <span asp-validation-for="Time"></span>
    </div>
    <div class="form-group">
        <label asp-for="PassengerName" class="control-label">Имя пасажира</label>
        <input type="text" asp-for="PassengerName" class="form-control"/>
        <span asp-validation-for="PassengerName"></span>
    </div>
    

    <dt>С животными</dt>
    @Html.CheckBoxFor(m => m.WithAnimals)
    <dt>Грузовая</dt>
    @Html.CheckBoxFor(x => x.FreightCar)

    <button type="button" id="btnLaunch" class="btn btn-primary">Launch Modal</button>
</form>

@section scripts{

    <environment names="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"
                asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
                asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
        </script>
    </environment>
    <script>
        $(function () {
            $('#btnLaunch').click(function () {
                $('#myModal').modal('show');
            });

            $('#btnSave').click(function () {
                var value = $('#txtInput').val();
                $('#myModal').modal('hide'); 
                setText(value, "expectedTime");
            });
        });
        function setText(val, e) {
            document.getElementById(e).value = val;
        }
    </script>
}