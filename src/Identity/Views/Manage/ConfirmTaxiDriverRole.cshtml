@using Identity.Models
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model Identity.Models.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>
<form asp-controller="Manage" asp-action="ConfirmTaxiDriverRole" asp-route-userId="@Model.UserId" method="post">
    
    @foreach (IdentityRole role in Model.AllRoles)
    {
        <input type="radio" name="roles" value="@role.Name" 
               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
    }

    <dt>Машина</dt>
    @Html.CheckBoxFor(x => x.CarExist)
    <div class="form-group">
        <label asp-for="DriverLicense" class="control-label">Номер водительского удостоверения</label>
        <input type="text" asp-for="DriverLicense" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>