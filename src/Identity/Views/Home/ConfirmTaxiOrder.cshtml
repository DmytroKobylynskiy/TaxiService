@model Identity.Models.TaxiOrder
@{
    ViewBag.Title = "Подтверждение выполнения заказа";
}

<form asp-action="ConfirmTaxiOrder" asp-controller="home">
    
    <div class="form-group">
        <label asp-for="Duration" class="control-label">Длительность</label>
        <input type="number" asp-for="Duration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Distanse" class="control-label">Расстояние</label>
        <input type="number" asp-for="Distanse" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>