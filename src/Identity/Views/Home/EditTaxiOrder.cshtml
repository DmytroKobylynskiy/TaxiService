@model Identity.Models.TaxiOrder
@{
    ViewBag.Title = "Редактирование заказа";
}
<form asp-action="EditTaxiOrder" asp-controller="home" asp-route-id="@Model.Id">
    <<div class="form-group">
        <label asp-for="StartPoint" class="control-label">Начальная точка</label>
        <input type="text" asp-for="StartPoint" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndPoint" class="control-label">Конечный пункт</label>
        <input type="text" asp-for="EndPoint" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label>
        <input type="text" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Time" class="control-label">Время</label>
        <input type="number" asp-for="Time" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>